<project name="esup-smsu-devel" default="_compile" basedir=".">

	<property name="app.zip-files.include" value="
		build.xml
		version.properties
		properties/**/*.*
		src/**/*.java 
		src/**/*.html 
		utils/**/*.*
    	webapp/media/**/*
		webapp/META-INF/MANIFEST.MF
		webapp/stylesheets/**/*.jsp
		webapp/WEB-INF/lib/*
		webapp/WEB-INF/web.xml
		webapp/WEB-INF/portlet.xml
	" />
	<property name="app.zip-files.exclude" value="
		build.properties
		webapp/media/images/*.ppt
		properties/config.properties
		properties/logging/log4j.properties
	" />

	<property name="commons.basedir" value="${basedir}/../esup-commons"/>
	
	<import file="${commons.basedir}/build-commons-devel.xml"/>

	<target name="_clean" depends="clean,_commons-clean" description="clean everything" />
	
	<target name="_prepare" depends="prepare,_commons-prepare" description="prepare the application" />
	
	<target name="_compile" depends="_prepare,_commons-compile,compile" description="compile the application" />
	
	<target name="_deploy" depends="_compile,_commons-deploy,deploy" description="deploy the application" />
	
	<target name="_start" depends="start" description="deploy and start Tomcat" />
		
	<target name="_stop" depends="stop" description="stop Tomcat" />
		
	<target name="_restart" depends="_stop,_start" description="deploy and restart Tomcat" />

	<target name="_dist" depends="_commons-dist" description="build ZIP archives" />

	<target name="_doc" depends="_commons-doc" description="build the web site" />

	<target name="_upload-doc" depends="_doc,_commons-upload-doc" description="update the web site" />

	<property name="rename-application.config" value="${basedir}/renameApplication.properties" />	
	<target name="_rename-application" description="rename the application" >
		<echo>Refactoring in progress, do not interrupt this task!</echo>
		<if>
			<not>
				<available file="${rename-application.config}" />
			</not>
			<then>
				<fail>file ${rename-application.config} not found.</fail>
			</then>
		</if>
		<replace 
			dir="${basedir}" 
			replaceFilterFile="${rename-application.config}" 
			excludes="renameApplication*.properties build-commons.xml build-commons-devel.xml version.properties" />
		<property file="${rename-application.config}" />
		<move file="${src.dir}/org/esupportail/smsu" tofile="${src.dir}/${org/esupportail/smsu}" />
		<move file="${basedir}/utils/uPortal/esup-smsu-portlet-fragment.xml" tofile="${basedir}/utils/uPortal/${esup-smsu}-portlet-fragment.xml" />
		<move file="${basedir}/utils/uPortal/esup-smsu-portlet-chanpub.xml" tofile="${basedir}/utils/uPortal/${esup-smsu}-portlet-chanpub.xml" />
		<echo>Refactoring done.</echo>
	</target>

	<target name="sql-properties" description="initialize some sql properties">
		<property name="sql.driver" value="org.gjt.mm.mysql.Driver"/>
		<property name="mysql-connector.version" value="3.1.12-bin"/>
		<property name="sql.classpath" value="${basedir}/utils/libAnt/mysql-connector-java-${mysql-connector.version}.jar"/>
	</target>
	
	<target name="init-data" description="initialize the database">
		<antcall target="create-table"/>
		<antcall target="compile-batch"/>
		<antcall target="check-batch-config"/>
		<antcall target="commons-init-data"/>	
	</target>
	
	<target name="create-table" depends="sql-properties"  description="create all tables">
		<!-- create main tables -->
		<property name="sql.src.create" value="${basedir}/utils/database/create_tables_esup-smsu.sql"/>
		<property name="sql.src.createqrtz" value="${basedir}/utils/database/create_qrtz_tables_esup-smsu.sql"/>
		<property name="sql.src.populate" value="${basedir}/utils/database/populate_tables_esup-smsu.sql" />
		
		<sql driver="${sql.driver}" url="${hibernate.connection.jdbc.url}"
		     userid="${hibernate.connection.jdbc.username}"   password="${hibernate.connection.jdbc.password}"
			 classpath="${sql.classpath}">
			<transaction src="${sql.src.create}"/>
			<transaction src="${sql.src.createqrtz}"/>
			<transaction src="${sql.src.populate}"/>
		</sql>
	</target>

	<taskdef name="hotswap" classname="dak.ant.taskdefs.Hotswap">
		<classpath>
			<pathelement location="${commons.basedir}/utils/ant/hotswap.jar"/>
		</classpath>
	</taskdef>

	<target name="hotswap" depends="_compile">
		<hotswap verbose="true" port="${jpdaAddress}">
		  	<fileset dir="${build.classes}" includes="**/*.class">
			  <date datetime="${date}" pattern="d-MMMM-yyyy HH:mma" when="after"/>
			</fileset>
		</hotswap>
	</target>

</project>


