      <test-group>
        <test>
          <attribute-name>eduPersonAffiliation</attribute-name>
          <tester-class>org.jasig.portal.groups.pags.testers.StringEqualsIgnoreCaseTester</tester-class>
          <test-value>student</test-value>
        </test>
      </test-group>
    </selection-test>
  </group>
  <group>
    <group-key>TousEns</group-key>
