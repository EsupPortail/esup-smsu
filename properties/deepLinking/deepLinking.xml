<?xml version="1.0" encoding="UTF-8" ?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd"
	>

	<!-- 
		/properties/deepLinking/deepLinking.xml
		The configuration file for deep linking.
		This file is referenced by /properties/applicationContext.xml.
		It should not be modified but by the developers.
	-->

	<bean 
		id="deepLinkingRedirector" 
		class="org.esupportail.smsu.web.deepLinking.DeepLinkingRedirectorImpl"
		scope="session"
		parent="abstractI18nAwareBean" 
		lazy-init="true"
		>
		<property name="sessionController" ref="sessionController" />
		<property name="approvalController" ref="approvalController" />
	</bean>

    <bean 
    	id="uportalUrlGenerator"
    	class="org.esupportail.commons.services.urlGeneration.UportalUrlGeneratorImpl"
    	lazy-init="true"
    	>
        <property name="casUrl" value="${cas.url}" />
        <property name="uportalFunctionnalName" value="${portail.fnameOfSmsu}" />
        <property name="uportalUrl" value="${portail.address}" />
    </bean>

    <bean 
    	id="servletUrlGenerator"
    	class="org.esupportail.commons.services.urlGeneration.ServletUrlGeneratorImpl"
    	lazy-init="true"
    	>
        <property name="casUrl" value="${cas.url}" />
    </bean>

</beans>
